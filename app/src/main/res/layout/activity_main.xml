<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el dato"
        android:textSize="25dp"
        android:id="@+id/etDato"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alta"
            android:textSize="20dp"
            android:id="@+id/btAlta"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:onClick="ocAlta"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baja"
            android:textSize="20dp"
            android:id="@+id/btBaja"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:onClick="ocBaja"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambio"
            android:textSize="20dp"
            android:id="@+id/btCambio"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:onClick="ocCambio"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"
            android:textSize="20dp"
            android:id="@+id/btNew"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:onClick="ocNew"
            />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvDatos"
        />

</LinearLayout>